case $HOSTNAME in
  nymeria)
      if [[ "$UID" -eq 0 ]]; then
        export PS1='\[\e[0;37m\][\[\e[0;34m\]\t\[\e[0;37m\]]\[\e[0;37m\][\[\e[0;34m\]\u\[\e[0;37m\]@\[\e[0;34m\]\h \[\e[0;34m\]\w\[\e[0;37m\]]\[\e[0;37m\]\$\[\e[m\] '
      else
        export PS1='\[\e[1;32m\][\[\e[1;31m\]\t\[\e[1;32m\]]\[\e[1;32m\][\[\e[1;31m\]\u\[\e[1;32m\]@\[\e[1;31m\]\h \[\e[1;31m\]\w\[\e[1;32m\]]\[\e[1;32m\]\$\[\e[m\] '
      fi
    ;;
  *)
      if [[ "$UID" -eq 0 ]]; then
        export PS1='\[\e[0;32m\][\[\e[0;35m\]\t\[\e[0;32m\]]\[\e[0;32m\][\[\e[0;35m\]\u\[\e[0;32m\]@\[\e[0;35m\]\h \[\e[0;35m\]\w\[\e[0;32m\]]\[\e[0;32m\]\$\[\e[m\] '
      else
        export PS1='\[\e[0;35m\][\[\e[0;34m\]\t\[\e[0;35m\]]\[\e[0;35m\][\[\e[0;34m\]\u\[\e[0;35m\]@\[\e[0;34m\]\h \[\e[0;34m\]\w\[\e[0;35m\]]\[\e[0;35m\]\$\[\e[m\] '
      fi
    ;;
esac

# vim:fenc=utf-8:ft=sh
