# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#
# Color definitions
#
# white black green magenta blue cyan yellow red default colorx

# intended for a dark bg

color normal color248 color235
color quoted color24 color235
color signature color126 color235
color indicator brightcolor208 color234
color error color160 color235
color status color75 color233
color tree color75 color235	# the thread tree in the index menu
color tilde color246 color235
color message color75 color235
color markers color75 color235
color attachment color221 color235
color search brightcolor160 color235	# how to hilite search patterns in the pager

#sidebar in mutt-ng
color sidebar_new color124 color235
#color sidebar color124 color235

# smileys :)
#color body brightyellow default '(\(:|:\)|;\)|:-\)|:>|8-\))'
#color body brightblue default '(\):|:\(|:-\(|:\'()'
#color body yellow default '(:D|:-D|=-O|:-[pP]|:-\*|>:o|:\/|:-\/)'

color hdrdefault color111 color235
#color header color243 color235 "^(Date|From|Subject)"
#color header color73 color235 "^(To|Reply-To):"
#color header color245 color235 "^(X-Original-To):"
#color header color96 color235 "^(User-Agent|X-Editor):"
color body   color81  color235 "(ftp|http)://\w[^ ]+[^.]" # point out URLs
color body color128 color235 '[-.+\w]+@[-.\w]+[^.]' # e-mail addresses
color underline brightgreen color235

# color-coding by sender/recipient
# fugal.nets
color index color19 color235 '~t "grant-family@---------"'
color index color21 color235 '~t "lee-family@---------"'
color index color27 color235 '~t "von-family@---------"'

# self
color index color123 color235 '~t von@---------' # mail to myself
color index color121 color235 '~t vontrapp@---------' # mail to myself
color index color117 color235 '~t vontrapp@---------' # mail to myself
color index color192 color235 '~t von(trapp)?[+][a-zA-Z]+@---------' # mail to myself

color index color75 color235 ~N	# New
color index color75 color235 ~O	# Old

# cassandra
color index color198 color235 '~f cassandra'
color index color201 color235 '~N ~f cassandra'
# root
color index color70 color235 '~t root'
color index brightcolor70 color235 '~N ~t root'
color index brightcolor70 color235 '~O ~t root'

# webmaster
color index color46 color235 '~t webmaster' # webmaster mail
color index brightcolor46 color235 '~N ~t webmaster' # webmaster mail
color index brightcolor48 color235 '~O ~t webmaster' # webmaster mail

color index color220 color235 ~T	# tagged
color index brightcolor160 color235 ~D	# Deleted
color index cyan color235 ~F		# Flagged

#color index magenta color235 '~h X-SpamStop-'
#color index magenta color235 '~h X-RBL-Warning'
#color index magenta color235 '~h X-Razor-Warning'

# attributes when using a mono terminal
#mono header underline ^(From|Subject):
mono quoted bold

